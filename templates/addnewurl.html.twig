{% extends "base.html.twig" %}

{% block title %}Add new URL{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <span style="color:red">{{message}}</span>
    <form action="index.php?url=addnewurl" method="post">
            <div class="container">
            <h1>Add New Feed URL</h1>
            <p>Please fill in this form to add new Feed URL.</p>
            <hr>
        
            <label for="new_url"><b>URL</b></label>
            <input style='width:100%' type="text" placeholder="Enter New Feed URL" name="new_url" required>
        
            <button type="submit" value='submit' name='submit' class="registerbtn">Add Feed URL</button>
            </div>
    </form>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}